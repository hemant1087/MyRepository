<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="3dp"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    app:cardBackgroundColor="@android:color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:weightSum="100"
        >
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:id="@+id/card_image_view"
            android:scaleType="fitXY"
            android:src="@drawable/demo_music_image"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="70"
            android:orientation="vertical"
            android:padding="10dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textStyle="bold"
                android:id="@+id/card_title"
                android:textColor="@android:color/black"
                android:text="EMPTINESS FT. JUSTIN TIBLEKAR"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/music_time_text_view"
                android:drawableLeft="@drawable/clock"
                android:textStyle="bold"
                android:text="18 HOURS AGO"
                android:textColor="#989998"
                android:textSize="10sp"
            />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textColor="#989998"
                android:id="@+id/card_album_detail"
                android:textSize="10sp"
                android:layout_marginTop="5dp"
                android:text="@string/hint_music_text"
                />


        </LinearLayout>
        
    </LinearLayout>

</android.support.v7.widget.CardView>